@model IEnumerable<EmployeeView>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <table class="table table-condensed">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.SurName</td>
                <td>@item.Patronymic</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id }) </td>
            </tr>
        }
    </table>
</div>